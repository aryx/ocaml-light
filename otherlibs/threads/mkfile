# -*- sh -*-
TOP=../../principia
<$TOP/mkconfig
<$TOP/mkfiles/$objtype/mkfile

LIB=libthreads.a

OFILES=scheduler.$O

INCLUDES=-I../../byterun -I$TOP/APE/include -I$TOP/APE/include/$objtype

<$TOP/mkfiles/mklib

CC=pcc
CFLAGS=-FV -c -D_POSIX_SOURCE -D_BSD_EXTENSION -DOS_PLAN9_APE $INCLUDES

ROOT=$TOP/ROOT

install:V: $LIB
	cp $LIB $ROOT/$objtype/lib/ocaml/

clean:
	rm -f *.[58] y.tab.? y.output y.error $CLEANFILES
	rm -f $LIB
